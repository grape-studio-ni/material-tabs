<resources>

    <!-- Base application theme. -->
    <style name="Thunder" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Thunder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Thunder.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Thunder.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Thunder Material Tabs Style -->
    <style name="Thunder.Material.Tabs" parent="@style/Thunder.Material.TabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabContentStart">@dimen/card_inner_content_2x_padding</item>
        <item name="tabMode">fixed</item>
        <item name="tabUnboundedRipple">true</item>
    </style>

    <style name="Thunder.Material.TabLayout" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabIndicator">@drawable/google_tabs_rounded_line_indicator</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabTextAppearance">@style/Thunder.Material.Tabs.TextAppearance</item>
        <item name="tabIconTint">@color/tab_color_selector</item>
        <item name="tabRippleColor">@color/colorAccent</item>
        <item name="tabTextColor">@color/color_dark</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabIndicatorColor">@color/tab_color_selector</item>
    </style>

    <style name="Thunder.Material.Tabs.TextAppearance" parent="@style/TextAppearance.MaterialComponents.Tab">
        <item name="android:textColor">@color/tab_color_selector</item>
        <item name="textAllCaps">true</item>
    </style>


    <!--Toolbar Style-->
    <style name="Thunder.Material.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:displayOptions">showHome|showTitle</item>
        <item name="displayOptions">showHome|showTitle</item>
        <item name="background">@color/toolbar_background_color</item>
        <item name="colorControlNormal">@color/toolbar_controls_color</item>
        <item name="colorControlActivated">@color/toolbar_controls_color</item>
        <item name="titleTextAppearance">@style/Thunder.Material.Toolbar.TextStyle</item>
    </style>
    <style name="Thunder.Material.Toolbar.TextStyle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_display_M</item>
    </style>


</resources>
